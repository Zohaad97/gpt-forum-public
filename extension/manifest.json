{
  "name": "ShareGPT: Share your ChatGPT conversations",
  "description": "ShareGPT is a Chrome extension that lets you your wildest ChatGPT conversations with one click.",
  "version": "1.0.95",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Login to ShareGPT",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "modal.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "forum.js",
        "index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://sharegpt.com/*"
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://apis.google.com; object-src 'self'"
  }
}